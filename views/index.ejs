  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

  <script>
    $(document).ready(function() {
      let gameButton = $('#game-button');

      // animate
      gameButton.addClass('animate__animated');
      gameButton.addClass('animate__bounce');

      $(document).on('mouseover' , '#game-button' , function() {
        var element = $(this);

        element.addClass('animate__animated');
        element.addClass('animate__bounce');
      });

      $(document).on('mouseout', '#game-button', function() {
        var element = $(this);

        element.removeClass('animate__animated');
        element.removeClass('animate__bounce');
      });
      //  end animate

      $(document).on('click', '#game-button', function() {
          $('#modal-register').modal();
      });
    });
  </script>
