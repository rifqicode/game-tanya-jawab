  <div class="modal modal-dark fade in" tabindex="-1" role="dialog" id="modal-register">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content" style="margin-top:30%">
        <div class="modal-header" style="background:#d05555;">
          <h5 class="modal-title"> Ayo Bermain!! </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" style="background:#e49c9c;">
          <form action="/play" method="post" id="play-game">
            <div class="form-group">
              <label class="label-control col-md-12 text-left"> Nama </label>
              <div class="col-md-12">
                <input type="text" name="name" id="name" class="form-control">
              </div>
            </div>
        </div>
        <div class="modal-footer" style="background:#d05555;">
          <button type="submit" class="btn btn-primary start-game">Mulai Bermain</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
        </div>
        </form>
      </div>
    </div>
  </div>

